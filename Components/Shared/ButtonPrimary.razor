
<button class="btn btn-primary" @onclick="@ButtonOnClick" onmouseover="this.style.backgroundColor='@ButtonOnMouseOver';"
    onmouseout="this.style.backgroundColor='@ButtonOnMouseOut';" id="Submit">@ButtonValue</button>

@code
{

    [Parameter]
    public string ButtonClass { get; set; }

    [Parameter]
    public EventCallback ButtonOnClick { get; set; }

    [Parameter]
    public string ButtonOnMouseOver { get; set; }

    [Parameter]
    public string ButtonOnMouseOut { get; set; }

    [Parameter]
    public string ButtonValue { get; set; }

    [Parameter]
    public string ButtonId { get; set; }
}